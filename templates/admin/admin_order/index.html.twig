{% extends 'base.html.twig' %}

{% block title %}Orders Management
{% endblock %}

{% block body %}
	<div class="container-fluid mt-4">
		<div class="row mb-4">
			<div class="col-md-12">
				<div class="d-flex justify-content-between align-items-center">
					<h1>
						<i class="bi bi-receipt-cutoff"></i>
						Orders Management
					</h1>
					<div>
						<span class="badge bg-primary">Total:
							{{ orders|length }}</span>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<div class="card shadow-sm">
					<div class="card-header bg-primary text-white">
						<h5 class="mb-0">
							<i class="bi bi-list-ul"></i>
							All Orders
						</h5>
					</div>
					<div class="card-body p-0">
						{% if orders|length > 0 %}
							<div class="table-responsive">
								<table class="table table-hover table-striped mb-0">
									<thead class="table-dark">
										<tr>
											<th>Order #</th>
											<th>Customer</th>
											<th>Date</th>
											<th>Status</th>
											<th>Items</th>
											<th class="text-end">Total</th>
											<th class="text-center">Actions</th>
										</tr>
									</thead>
									<tbody>
										{% for order in orders %}
											<tr>
												<td>
													<strong>#{{ order.id }}</strong>
												</td>
												<td>
													{% if order.user %}
														<i class="bi bi-person-circle"></i>
														{{ order.user.email }}
													{% else %}
														<span class="text-muted">
															<i class="bi bi-cart"></i>
															Guest Cart
														</span>
													{% endif %}
												</td>
												<td>
													<small class="text-muted">
														{{ order.createdAt|date('d/m/Y') }}
														<br>
														{{ order.createdAt|date('H:i') }}
													</small>
												</td>
												<td>
													{% if order.status == 'cart' %}
														<span class="badge bg-secondary">
															<i class="bi bi-cart"></i>
															Cart
														</span>
													{% elseif order.status == 'pending_confirmation' or order.status == 'pending' %}
														<span class="badge bg-warning text-dark">
															<i class="bi bi-clock-history"></i>
															Pending
														</span>
													{% elseif order.status == 'confirmed' %}
														<span class="badge bg-info">
															<i class="bi bi-check-circle"></i>
															Confirmed
														</span>
													{% elseif order.status == 'shipped' %}
														<span class="badge bg-primary">
															<i class="bi bi-truck"></i>
															Shipped
														</span>
													{% elseif order.status == 'delivered' %}
														<span class="badge bg-success">
															<i class="bi bi-box-seam"></i>
															Delivered
														</span>
													{% elseif order.status == 'cancelled' %}
														<span class="badge bg-danger">
															<i class="bi bi-x-circle"></i>
															Cancelled
														</span>
													{% else %}
														<span class="badge bg-secondary">
															{{ order.status|replace({'_': ' '})|title }}
														</span>
													{% endif %}
												</td>
												<td>
													<span class="badge bg-light text-dark">
														{{ order.racquets.count }}
														item(s)
													</span>
												</td>
												<td class="text-end">
													<strong class="text-primary">
														{{ order.total|number_format(2, '.', ',') }}
														€
													</strong>
												</td>
												<td class="text-center">
													<div class="btn-group btn-group-sm">
														<a href="{{ path('app_admin_orders_show', {id: order.id}) }}" class="btn btn-outline-primary" title="View Details">
															<i class="bi bi-eye"></i>
														</a>
													</div>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						{% else %}
							<div class="text-center py-5">
								<i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
								<p class="text-muted mt-3">No orders found.</p>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>

		{# Statistics Summary #}
		<div class="row mt-4">
			<div class="col-md-3">
				<div class="card shadow-sm border-start border-warning border-4">
					<div class="card-body">
						<h6 class="text-muted">Pending Orders</h6>
						<h3 class="mb-0">
							{{ orders|filter(o => o.status in ['pending', 'pending_confirmation'])|length }}
						</h3>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="card shadow-sm border-start border-info border-4">
					<div class="card-body">
						<h6 class="text-muted">Confirmed Orders</h6>
						<h3 class="mb-0">
							{{ orders|filter(o => o.status == 'confirmed')|length }}
						</h3>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="card shadow-sm border-start border-primary border-4">
					<div class="card-body">
						<h6 class="text-muted">Shipped Orders</h6>
						<h3 class="mb-0">
							{{ orders|filter(o => o.status == 'shipped')|length }}
						</h3>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="card shadow-sm border-start border-success border-4">
					<div class="card-body">
						<h6 class="text-muted">Total Revenue</h6>
						<h3 class="mb-0">
							{% set total_revenue = 0 %}
							{% for order in orders %}
								{% if order.status not in ['cart', 'cancelled'] %}
									{% set total_revenue = total_revenue + order.total %}
								{% endif %}
							{% endfor %}
							{{ total_revenue|number_format(2, '.', ',') }}
							€
						</h3>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
