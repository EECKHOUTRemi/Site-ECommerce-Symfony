{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-sm mb-4">
			<div class="card-header bg-primary text-white">
				<h1 class="h3 mb-0">
					<i class="bi bi-speedometer2"></i>
					Admin Dashboard
				</h1>
			</div>
			<div class="card-body">
				<p class="text-muted">Welcome to the administration panel. Manage your e-commerce platform from here.</p>
			</div>
		</div>

		<div
			class="row">
			{# Racquet Management Card #}
			<div class="col-md-4 mb-4">
				<div class="card shadow-sm h-100 border-primary">
					<div class="card-body text-center">
						<div class="mb-3">
							<i class="bi bi-trophy" style="font-size: 3rem; color: #0d6efd;"></i>
						</div>
						<h3 class="card-title">Racquet Management</h3>
						<p class="card-text text-muted">
							Manage your racquet inventory. Add new racquets, update existing ones, or remove discontinued items.
						</p>
						<ul class="list-unstyled text-start mb-4">
							<li>
								<i class="bi bi-check-circle text-success"></i>
								View all racquets
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Add new racquets
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Edit specifications
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Manage stock levels
							</li>
						</ul>
						<a href="{{ path('app_admin_racquet_index') }}" class="btn btn-primary btn-lg w-100">
							<i class="bi bi-trophy-fill"></i>
							Manage Racquets
						</a>
					</div>
				</div>
			</div>

			{# Order Management Card #}
			<div class="col-md-4 mb-4">
				<div class="card shadow-sm h-100 border-success">
					<div class="card-body text-center">
						<div class="mb-3">
							<i class="bi bi-receipt-cutoff" style="font-size: 3rem; color: #198754;"></i>
						</div>
						<h3 class="card-title">Order Management</h3>
						<p class="card-text text-muted">
							View and manage customer orders. Process confirmations, track shipments, and handle order status updates.
						</p>
						<ul class="list-unstyled text-start mb-4">
							<li>
								<i class="bi bi-check-circle text-success"></i>
								View all orders
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Confirm pending orders
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Track shipments
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Update order status
							</li>
						</ul>
						<a href="{{ path('app_admin_orders_index') }}" class="btn btn-success btn-lg w-100">
							<i class="bi bi-receipt"></i>
							Manage Orders
						</a>
					</div>
				</div>
			</div>

			{# User Management Card #}
			<div class="col-md-4 mb-4">
				<div class="card shadow-sm h-100 border-info">
					<div class="card-body text-center">
						<div class="mb-3">
							<i class="bi bi-people" style="font-size: 3rem; color: #0dcaf0;"></i>
						</div>
						<h3 class="card-title">User Management</h3>
						<p class="card-text text-muted">
							Manage customer accounts, view user information, and handle user roles and permissions.
						</p>
						<ul class="list-unstyled text-start mb-4">
							<li>
								<i class="bi bi-check-circle text-success"></i>
								View all users
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Edit user details
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Manage roles
							</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Account status
							</li>
						</ul>
						<a href="#" class="btn btn-info btn-lg w-100" onclick="alert('User management coming soon!'); return false;">
							<i class="bi bi-people-fill"></i>
							Manage Users
						</a>
						<small class="text-muted d-block mt-2">Coming soon</small>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
