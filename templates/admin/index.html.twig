{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-sm mb-4">
			<div class="card-header bg-primary text-white">
				<h1 class="h3 mb-0">
					<i class="bi bi-speedometer2"></i>
					Admin Dashboard
				</h1>
			</div>
			<div class="card-body">
				<p class="text-muted">Welcome to the administration panel. Manage your e-commerce platform from here.</p>
			</div>
		</div>

		<div
			class="row">
			{# Racquet Management Card #}
			<div class="col-md-6 mb-4">
				<div class="card shadow-sm h-100 border-primary">
					<div class="card-body text-center">
						<div class="mb-3">
							<i class="bi bi-trophy" style="font-size: 3rem; color: #0d6efd;"></i>
						</div>
						<h3 class="card-title">Racquet Management</h3>
						<p class="card-text text-muted">
							Manage your racquet inventory. Add new racquets, update existing ones, or remove discontinued items.
						</p>
						<ul class="list-unstyled text-start mb-4">
							<li>
								<i class="bi bi-check-circle text-success"></i>
								View all racquets</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Add new racquets</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Edit specifications</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Manage stock levels</li>
						</ul>
						<a href="{{ path('app_admin_racquet_index') }}" class="btn btn-primary btn-lg w-100">
							<i class="bi bi-trophy-fill"></i>
							Manage Racquets
						</a>
					</div>
				</div>
			</div>

			{# User Management Card #}
			<div class="col-md-6 mb-4">
				<div class="card shadow-sm h-100 border-info">
					<div class="card-body text-center">
						<div class="mb-3">
							<i class="bi bi-people" style="font-size: 3rem; color: #0dcaf0;"></i>
						</div>
						<h3 class="card-title">User Management</h3>
						<p class="card-text text-muted">
							Manage customer accounts, view user information, and handle user roles and permissions.
						</p>
						<ul class="list-unstyled text-start mb-4">
							<li>
								<i class="bi bi-check-circle text-success"></i>
								View all users</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Edit user details</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Manage roles</li>
							<li>
								<i class="bi bi-check-circle text-success"></i>
								Account status</li>
						</ul>
						<a href="#" class="btn btn-info btn-lg w-100" onclick="alert('User management coming soon!'); return false;">
							<i class="bi bi-people-fill"></i>
							Manage Users
						</a>
						<small class="text-muted d-block mt-2">Coming soon</small>
					</div>
				</div>
			</div>
		</div>

		<div
			class="row">
			{# Quick Stats Card #}
			<div class="col-12">
				<div class="card shadow-sm">
					<div class="card-header bg-light">
						<h5 class="mb-0">
							<i class="bi bi-bar-chart"></i>
							Quick Actions
						</h5>
					</div>
					<div class="card-body">
						<div class="row text-center">
							<div class="col-md-4 mb-3">
								<a href="{{ path('app_admin_racquet_new') }}" class="btn btn-outline-success btn-lg w-100 d-flex flex-column align-items-center justify-content-center" style="height: 80px;">
									<i class="bi bi-plus-circle" style="font-size: 1.5rem;"></i>
									<span class="mt-2">Add New Racquet</span>
								</a>
							</div>
							<div class="col-md-4 mb-3">
								<a href="{{ path('racquets') }}" class="btn btn-outline-primary btn-lg w-100 d-flex flex-column align-items-center justify-content-center" style="height: 80px;">
									<i class="bi bi-shop" style="font-size: 1.5rem;"></i>
									<span class="mt-2">View Store</span>
								</a>
							</div>
							<div class="col-md-4 mb-3">
								<a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-lg w-100 d-flex flex-column align-items-center justify-content-center" style="height: 80px;">
									<i class="bi bi-house" style="font-size: 1.5rem;"></i>
									<span class="mt-2">Back to Home</span>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
