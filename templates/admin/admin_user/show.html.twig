{% extends 'base.html.twig' %}

{% block title %}User Details
{% endblock %}

{% block body %}
	<div class="container py-4">
		<div class="row mb-3">
			<div class="col">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="{{ path('app_admin_user_index') }}">Users</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">{{ user.username }}</li>
					</ol>
				</nav>
			</div>
		</div>

		<div class="card shadow-sm">
			<div class="card-header bg-primary text-white">
				<h4 class="mb-0">
					<i class="bi bi-person-circle"></i>
					User Details</h4>
			</div>
			<div class="card-body">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th class="bg-light" style="width: 200px;">Id</th>
							<td>{{ user.id }}</td>
						</tr>
						<tr>
							<th class="bg-light">Username</th>
							<td>
								<strong>{{ user.username }}</strong>
							</td>
						</tr>
						<tr>
							<th class="bg-light">Roles</th>
							<td>
								{% for role in user.roles %}
									<span class="badge bg-secondary me-1">{{ role }}</span>
								{% endfor %}
							</td>
						</tr>
						<tr>
							<th class="bg-light">Lastname</th>
							<td>{{ user.lastname }}</td>
						</tr>
						<tr>
							<th class="bg-light">Firstname</th>
							<td>{{ user.firstname }}</td>
						</tr>
						<tr>
							<th class="bg-light">Phone</th>
							<td>{{ user.phone }}</td>
						</tr>
						<tr>
							<th class="bg-light">Email</th>
							<td>
								<a href="mailto:{{ user.email }}">{{ user.email }}</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="card-footer bg-light">
				<div class="d-flex justify-content-between align-items-center">
					<a href="{{ path('app_admin_user_index') }}" class="btn btn-outline-secondary">
						<i class="bi bi-arrow-left"></i>
						Back to list
					</a>
					<div>
						<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-warning me-2">
							<i class="bi bi-pencil"></i>
							Edit
						</a>
						{{ include('admin/admin_user/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
