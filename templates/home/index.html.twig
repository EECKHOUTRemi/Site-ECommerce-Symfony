{% extends 'base.html.twig' %}

{% block title %}Welcome - Tennis Racquet Store
{% endblock %}

{% block body %}
	{# Hero Section #}
	<div class="bg-primary text-white py-5">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-8">
					<h1 class="display-4 fw-bold mb-3">
						<i class="bi bi-trophy-fill"></i>
						Premium Tennis Racquets
					</h1>
					<p class="lead mb-4">
						Discover our collection of professional tennis racquets. 
                        Find the perfect racquet to elevate your game and dominate the court.
					</p>
					<div class="d-flex gap-3">
						<a href="{{ path('racquets') }}" class="btn btn-light btn-lg">
							<i class="bi bi-shop"></i>
							Browse Racquets
						</a>
						<a href="{{ path('app_cart_index') }}" class="btn btn-outline-light btn-lg">
							<i class="bi bi-cart"></i>
							View Cart
						</a>
					</div>
				</div>
				<div class="col-lg-4 text-center mt-4 mt-lg-0">
					<i class="bi bi-trophy" style="font-size: 10rem; opacity: 0.3;"></i>
				</div>
			</div>
		</div>
	</div>

	{# Features Section #}
	<div class="container my-5">
		<div class="row text-center g-4">
			<div class="col-md-4">
				<div class="card h-100 border-0 shadow-sm">
					<div class="card-body">
						<div class="mb-3">
							<i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
						</div>
						<h5 class="card-title">Quality Guaranteed</h5>
						<p class="card-text text-muted">
							All racquets are authentic and come with manufacturer warranties
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card h-100 border-0 shadow-sm">
					<div class="card-body">
						<div class="mb-3">
							<i class="bi bi-truck text-primary" style="font-size: 3rem;"></i>
						</div>
						<h5 class="card-title">Fast Shipping</h5>
						<p class="card-text text-muted">
							Get your racquet delivered quickly and securely to your door
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card h-100 border-0 shadow-sm">
					<div class="card-body">
						<div class="mb-3">
							<i class="bi bi-headset text-info" style="font-size: 3rem;"></i>
						</div>
						<h5 class="card-title">Expert Support</h5>
						<p class="card-text text-muted">
							Our team helps you choose the perfect racquet for your playing style
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	{# Featured Racquets Section #}
	<div class="bg-light py-5">
		<div class="container">
			<div class="text-center mb-5">
				<h2 class="display-6 fw-bold">Featured Racquets</h2>
				<p class="text-muted">Check out our latest and most popular models</p>
			</div>

			{% if featured_racquets is not empty %}
				<div class="row g-4">
					{% for racquet in featured_racquets %}
						<div class="col-md-4">
							<div class="card h-100 shadow-sm">
								<img src="{{ asset('img/racquet/' ~ racquet.id ~ '.' ~ racquet.imgExtension) }}" class="card-img-top" alt="{{ racquet.brand }} {{ racquet.model }}" style="height: 250px; object-fit: contain; padding: 20px;">
								<div class="card-body">
									<h5 class="card-title">{{ racquet.brand }}
										{{ racquet.model }}</h5>
									<h4 class="text-primary">{{ racquet.price }}
										â‚¬</h4>
									<div class="mb-2">
										<span class="badge
											                                            {% if racquet.quantity >= 30 %}
											                                                bg-success
											                                            {% elseif racquet.quantity >= 10 %}
											                                                bg-warning
											                                            {% else %}
											                                                bg-danger
											                                            {% endif %}
											                                        ">{{ racquet.quantity }}
											in stock</span>
									</div>
								</div>
								<div class="card-footer bg-transparent">
									<a href="{{ path('racquet_detail', {'id': racquet.id}) }}" class="btn btn-outline-primary w-100">
										View Details
									</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>

				<div class="text-center mt-5">
					<a href="{{ path('racquets') }}" class="btn btn-primary btn-lg">
						<i class="bi bi-grid"></i>
						View All Racquets
					</a>
				</div>
			{% else %}
				<div class="alert alert-info text-center">
					<i class="bi bi-info-circle" style="font-size: 2rem;"></i>
					<p class="mb-0 mt-2">No racquets available at the moment. Check back soon!</p>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
