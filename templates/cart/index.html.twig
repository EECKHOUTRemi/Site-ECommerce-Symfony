{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Your Cart</h1>
        {% if cart.racquets.count > 0 %}
            {{ form_start(form) }}
            <div class="row">
                <!-- List of items -->
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h2 class="h5 mb-0">Racquets</h2>
                            <div>
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-warning btn-sm'}}) }}
                                {{ form_widget(form.clear, {'attr': {'class': 'btn btn-light btn-sm ml-2'}}) }}
                            </div>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for item in form.racquets %}
                                <li class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <img src={{ asset('img/racquet/' ~ item.vars.data.racquet.id ~ '.' ~ item.vars.data.racquet.imgExtension) }} width="64" alt="Product image">
                                        </div>
                                        <div class="col">
                                            <h5 class="mb-1">
                                                <a href={{ path("racquet_detail", {'id': item.vars.data.racquet.id}) }}>
                                                    {{ item.vars.data.racquet.brand ~ ' ' ~ item.vars.data.racquet.model }}
                                                </a>
                                            </h5>
                                            <div class="form-inline mt-2">
                                                <div class="form-group mb-0 mr-2">
                                                    {{ form_widget(item.quantity, {
                                                        'attr': {
                                                            'class': 'form-control form-control-sm ' ~ (item.quantity.vars.valid ? '' : 'is-invalid'),
                                                            'style': 'width: 80px;'
                                                        }
                                                    }) }}
                                                    <div class="invalid-feedback">
                                                        {{ form_errors(item.quantity) }}
                                                    </div>
                                                </div>
                                                {{ form_widget(item.remove, {'attr': {'class': 'btn btn-outline-danger btn-sm'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-auto text-right">
                                            <strong class="text-primary">{{ item.vars.data.racquet.price }} €</strong>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
                <!-- Summary -->
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h2 class="h5 mb-0">Summary</h2>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <strong>Total</strong>
                                <strong class="text-primary">{{ cart.total }} €</strong>
                            </li>
                        </ul>
                        <div class="card-body">
                            <a href="#" class="btn btn-success w-100">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-inbox"></i>
                Your cart is empty. Go to the <a href="{{ path('app_home') }}" class="alert-link">product list</a>.
            </div>
        {% endif %}
    </div>
{% endblock %}