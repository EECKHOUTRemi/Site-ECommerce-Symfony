{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card shadow-sm">
					<div class="card-header bg-primary text-white">
						<h1 class="h3 mb-0">
							<i class="bi bi-person-plus"></i>
							Create Account
						</h1>
					</div>
					<div class="card-body p-4">
						<p class="text-muted mb-4">Fill in the information below to create your account</p>

						{{ form_start(registrationForm) }}
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_label(registrationForm.firstname, 'First Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
								{{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Enter your first name'}}) }}
								{{ form_errors(registrationForm.firstname) }}
							</div>
							<div class="col-md-6 mb-3">
								{{ form_label(registrationForm.lastname, 'Last Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
								{{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'}}) }}
								{{ form_errors(registrationForm.lastname) }}
							</div>
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'form-label fw-bold'}}) }}
							{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Choose a username'}}) }}
							{{ form_errors(registrationForm.username) }}
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.email, 'Email Address', {'label_attr': {'class': 'form-label fw-bold'}}) }}
							{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'your.email@example.com'}}) }}
							{{ form_errors(registrationForm.email) }}
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.phone, 'Phone Number', {'label_attr': {'class': 'form-label fw-bold'}}) }}
							{{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control', 'placeholder': '+33 6 12 34 56 78'}}) }}
							{{ form_errors(registrationForm.phone) }}
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label fw-bold'}}) }}
							{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter a secure password'}}) }}
							{{ form_errors(registrationForm.plainPassword) }}
						</div>

						<div class="mb-4">
							<div class="form-check">
								{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
								{{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
							</div>
							{{ form_errors(registrationForm.agreeTerms) }}
						</div>

						<div class="d-grid gap-2">
							<button type="submit" class="btn btn-primary btn-lg">
								<i class="bi bi-person-check"></i>
								Register
							</button>
						</div>
						{{ form_end(registrationForm) }}
					</div>
					<div class="card-footer bg-light text-center">
						<p class="mb-0">
							Already have an account?
							<a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">
								Sign in here
							</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
