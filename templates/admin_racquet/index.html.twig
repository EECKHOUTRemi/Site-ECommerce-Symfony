{% extends 'base.html.twig' %}

{% block title %}Racquet index
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-sm">
			<div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
				<h1 class="h3 mb-0">Racquet Inventory</h1>
				<a href="{{ path('app_admin_racquet_new') }}" class="btn btn-success">
					<i class="bi bi-plus-circle"></i>
					Create New
				</a>
			</div>
			<div class="card-body p-0">
				<div class="table-responsive">
					<table class="table table-hover table-striped mb-0">
						<thead class="table-light">
							<tr>
								<th>Id</th>
								<th>Brand</th>
								<th>Model</th>
								<th>Head Size</th>
								<th>String Pattern</th>
								<th>Weight</th>
								<th>Grip Size</th>
								<th>Price</th>
								<th>Quantity</th>
								<th class="text-center">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for racquet in racquets %}
								<tr>
									<td>{{ racquet.id }}</td>
									<td>
										<strong>{{ racquet.brand }}</strong>
									</td>
									<td>{{ racquet.model }}</td>
									<td>{{ racquet.headSize }}</td>
									<td>{{ racquet.stringPattern }}</td>
									<td>{{ racquet.weight }}</td>
									<td>{{ racquet.gripSize }}</td>
									<td>
										<span class="badge bg-success">${{ racquet.price }}</span>
									</td>
									<td>
										<span class="badge bg-info">{{ racquet.quantity }}</span>
									</td>
									<td class="text-center">
										<div class="btn-group btn-group-sm" role="group">
											<a href="{{ path('app_admin_racquet_show', {'id': racquet.id}) }}" class="btn btn-outline-primary" title="Show">
												<i class="bi bi-eye"></i>
											</a>
											<a href="{{ path('app_admin_racquet_edit', {'id': racquet.id}) }}" class="btn btn-outline-warning" title="Edit">
												<i class="bi bi-pencil"></i>
											</a>
										</div>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="10" class="text-center text-muted py-4">
										<i class="bi bi-inbox" style="font-size: 2rem;"></i>
										<p class="mb-0 mt-2">No records found</p>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
